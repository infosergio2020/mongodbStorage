<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Image Uploads</title>

    <%- include('partials/head') %>
</head>
<body>
    <%- include("partials/navigation") %>

    <div class="container">



        <div class="row mt-5">
            <div class="col-12 col-md-8 mx-auto">
                <div class="card">
                    <div class="card-header text-center">
                        <img id="prev" src="#" alt="" class="card-img-top" hidden>
                        <p id="icon-default"><i class="fas fa-image fa-7x"></i></p>
                    </div>
                    <div class="card-body card-body-custom">
                        <form action="/upload" method="post" enctype="multipart/form-data">
                            <div class="mb-3">
                                <label for="formFile" class="form-label">Imagen a subir</label>
                                <input id="file" name="file" class="form-control" type="file">
                            </div>
                            
                            <div class="form-group mb-3">
                                <input name="title" id="title" class="form-control" type="text" placeholder="ingrese titulo de la imagen" aria-label="ingrese titulo de la imagen">
                            </div>

                            <div class="form-group mb-3">
                                <textarea name="description" class="form-control" placeholder="Descripcion"></textarea>
                            </div>

                            <div class="form-group d-grid gap-2">
                                <button id="submit" type="submit" class="btn btn-success btn-block" >SUBIR IMAGEN</button>
                            </div>
                        </form>
                    </div>
                </div>     
            </div>
        </div>
    </div>
    
    <script src="js/bootstrap.bundle.min.js"></script>
    <script src="js/all.min.js"></script>
    <script src="js/myscript.js"></script>
</body>
</html>
